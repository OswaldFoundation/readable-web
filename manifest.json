{
	"manifest_version": 2,
	"name": "Readable Web by Oswald",
	"version": "0.5",
	"description": "Turn any page into a comfortable reading view.",
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"background": {
		"scripts": ["scripts/app.js"],
		"persistent": false
	},
	"homepage_url": "https://oswald.tech/readable-web",
	"permissions": ["activeTab", "tabs", "http://*/*", "https://*/*", "*://*/*"],
	"browser_action": {
		"default_icon": {
			"19": "icons/icon-19.png",
			"38": "icons/icon-38.png"
		},
		"default_title": "Readable Web",
		"default_popup": "app.html"
	}
}
